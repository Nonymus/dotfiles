filetype plugin on
filetype indent on

set ruler	"always show current position
set smartcase	"smart case sensivity when searching
set hlsearch	"highlight search results
set incsearch	"incremental search
set lazyredraw	"dont draw during macros
set magic	"for regex
set showmatch	"show matching brackets when cursor is over one
set mat=2	"match blink 2 seconds

"no error bell
set noerrorbells
set t_vb=
set tm=500

syntax enable
colorscheme desert
set background=dark
set encoding=utf8

"dont use tab character
set expandtab
set smarttab

set shiftwidth=4
set tabstop=4

set ai "autoindent
set si "smartindent
set wrap "Wrap lines

